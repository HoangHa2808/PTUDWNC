@model TatBlog.WebApp.Areas.Admin.Models.AuthorEditModel

@{
    ViewData["PageTitle"] = "Thêm/Cập nhật tác giả";
}

<h1>Thêm/Cập nhật tác giả</h1>

<form asp-area="Admin"
      asp-controller="Authors"
      asp-action="Edit"
      enctype="multipart/form-data"
      method="author">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row mb-3">
        <label asp-for="FullName"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text"
                   class="form-control"
                   asp-for="FullName">
            <span asp-validation-for="FullName"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Email"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text"
                   class="form-control"
                   asp-for="Email">
            <span asp-validation-for="Email"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="UrlSlug"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text"
                   class="form-control"
                   asp-for="UrlSlug">
            <span asp-validation-for="UrlSlug"
                  class="text-danger"></span>
        </div>
    </div>

   

    <div class="row mb-3">
        <label asp-for="Notes"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text"
                   class="form-control"
                   asp-for="Notes">
            <span asp-validation-for="Notes"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="CategoryId"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-control"
                    asp-for="CategoryId" asp-items="Model.CategoryList">
                <option value="">-- Chọn chủ đề --</option>
            </select>
            <span asp-validation-for="CategoryId"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="SelectedTags"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text"
                   class="form-control"
                   asp-for="SelectedTags">
            <span asp-validation-for="SelectedTags"
                  class="text-danger"></span>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <div class="row mb-3">
            <label asp-for="ImageUrl"
                   class="col-sm-2 col-form-label"></label>
            <div class="" col-sm-10>
                <img src="/@Model.ImageUrl"/>
            </div>
        </div>
    }

    <div class="row mb-3">
        <label asp-for="ImageFile"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="file"
                   class="form-control"
                   asp-for="ImageFile">
            <span asp-validation-for="ImageFile"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">
            Lưu Các Thay Đổi
        </button>

        <a asp-area="Admin"
           asp-controller="Authors"
           asp-action="Index"
           class="btn btn-danger">
            Huỷ & Quay lại
        </a>
    </div>

</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />

    <script src="~/lib/speakingurl/speakingurl.min.js"></script>

    <script>
        $(function (){
            $('#Title').change(function(){
                var slug = getSlug(this.value);
                $('#UrlSlug').val(slug).trigger('blur');
            });
        });
    </script>
}

