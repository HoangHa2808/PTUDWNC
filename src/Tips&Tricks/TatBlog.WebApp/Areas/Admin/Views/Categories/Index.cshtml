@model IPagedList<CategoryItem>
@{
    ViewData["PageTitle"] = "Danh sách chủ đề";
    var categoriesList = Model;
}

<h1>
    Danh sách chủ đề
</h1>


@if (categoriesList != null && categoriesList.Count > 0)
{
    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>Chủ đề</th>
                <th>Slug</th>
                <th>Show On Menu</th>
                <th>Chỉnh sửa</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var category in categoriesList)
            {
                <tr>
                    <td>
                        <a asp-area="Admin"
                           asp-controller="Categories"
                           asp-action="Edit"
                           asp-route-id="@category.Id"
                           class="text-bold">
                            @category.Name
                        </a>

                        <p class="text-bold">
                            @category.Description
                        </p>
                    </td>
                    <td>
                        @category.UrlSlug
                    </td>
                    <td>
                        <a asp-area="Admin"
                           asp-controller="Categories"
                           asp-action="Toggle"
                           asp-route-id="@category.Id"
                           class="text-bold"
                           type="submit"
                           class="btn btn-sm@(category.ShowOnMenu ? "btn-success" : "btn-danger")">
                            @if (category.ShowOnMenu)
                            {
                                <i class="fa fa-check"> Có</i>
                            }
                            else
                            {
                                <i class="fa fa-times"> Không</i>
                            }
                        </a>
                    </td>
                    <td>
                        <a asp-area="Admin"
                           asp-controller="Categories"
                           asp-action="Edit"
                           class="btn btn-sm">
                            <i class="fa fa-pen" style="color: #3b5581"> Thêm</i>
                        </a>
                        <a asp-area="Admin"
                           asp-controller="Categories"
                           asp-action="Delete"
                           asp-route-id="@category.Id"
                           class="btn btn-sm"
                           onclick="return confirm('Bạn có muốn xoá không?')">
                            <i class="fa fa-trash" style="color: #3b5581"> Xoá</i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 class="text-danger">
        Không tìm thấy chủ đề nào
    </h1>
}
