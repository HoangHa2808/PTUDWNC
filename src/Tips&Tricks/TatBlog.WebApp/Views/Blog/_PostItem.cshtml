@model Post
@{
    var imageUrl = string.IsNullOrWhiteSpace(Model.ImageUrl)
            ? "/images/pet.jpg"
            : $"/{Model.ImageUrl}";
}

<article class="blog-entry mb-4">
    <div class="card">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@imageUrl"
                     class="card-img"
                     alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <a asp-controller="Blog" asp-action="Post" asp-route-slug="@Model.UrlSlug" 
                    asp-route-year="@Model.PostedDate.Year"
                    asp-route-month="@Model.PostedDate.Month"
                    asp-route-day="@Model.PostedDate.Day">
                        <h5 class="card-title">
                            @Model.Title
                        </h5>
                    </a>
                    <p class="card-text">
                        <small class="text-muted">
                            Tác giả:
                        </small>
                        <a asp-controller="Blog" asp-action="Author" asp-route-slug="@Model.Author.UrlSlug">
                            <span class="text-primary">
                                @Model.Author.FullName
                            </span>
                        </a>
                        <small class="text-muted">
                            Chủ đề:
                        </small>
                        <a asp-controller="Blog" asp-action="Category" asp-route-slug="@Model.Category.UrlSlug">
                            <span class="text-primary">
                                @Model.Category.Name
                            </span>
                        </a>
                    </p>
                    <p class="card-text">
                        @Html.Raw(Model.ShortDescription)
                    </p>
                    <div class="tag-list">
                        <partial name="_TagList" model="@Model.Tags" />
                    </div>

                    <div class="text-end">
                        <a asp-area=""
                            asp-controller="Blog"
                           asp-action="Post"
                           asp-route-year="@Model.PostedDate.Year"
                           asp-route-month="@Model.PostedDate.Month"
                           asp-route-day="@Model.PostedDate.Day"
                           asp-route-slug="@Model.UrlSlug"
                           class="btn btn-primary"
                           title="@Model.Title">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>