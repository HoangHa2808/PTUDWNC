@model string

@{
    ViewData["PageTitle"] = "Hủy đăng ký nhận thông báo";
}

<div class="mx-auto mt-5 p-5 rounded shadow" style="max-width: 576px">
    <h5 class="text-uppercase">Hủy đăng ký nhận thông báo mới</h5>
    <p>Hủy đăng ký nhận thông báo qua email.</p>
    <form method="post">
        <div class="mb-3">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="reason">Lý do hủy đăng ký</label>
            <textarea id="reason" name="reason" class="form-control" row="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary px-4 py-2">Hủy đăng ký</button>
        @if (!string.IsNullOrWhiteSpace(Model))
        {
            <div class="mt-3 text-danger">@Model</div>
        }
    </form>
</div>