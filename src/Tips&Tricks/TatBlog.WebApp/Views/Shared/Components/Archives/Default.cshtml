@model IList<PostItem>

<div class="mb-4">
    <h3 class="text-success mb-2">
        Danh sách 12 tháng gần nhất và số lượng bài viết trong mỗi tháng dưới dạng các liên kết
    </h3>

    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Blog"
                   asp-action="Category"
                   asp-route-slug="@item.UrlSlug"
                   title="@item.Description">
                    @item.Name
                    <span>(@item.PostCount)</span>
                </a>
            </li>
        }
    </ul>
</div>