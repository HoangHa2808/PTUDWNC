@model IList<TagItem>

<div class="mb-4">
    <h3 class="text-success mb-2">
        Danh sách các thẻ (tag)
    </h3>

    @foreach (var item in Model)
    {
            <a asp-controller="Blog"
           asp-action="Tag"
           asp-route-slug="@item.UrlSlug"
               title="Tag: @item.Name"
               class="btn btn-sm btn-outline-secondary">
                @item.Name
                @*<span>(@item.PostCount)</span>*@
            </a>
    }
</div>